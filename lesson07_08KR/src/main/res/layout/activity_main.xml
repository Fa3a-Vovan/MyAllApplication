<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_task_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:background="@color/green"
        android:padding="5dp"
        android:text="@string/task_app"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_task_app"
        android:layout_centerHorizontal="true"
        android:hint="@string/et_example_text"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/b_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_edit_text"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/gray"
        android:text="@string/button"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b_button"
        android:layout_margin="10dp"
        android:text="@string/result"
        android:textColor="@color/blue" />

</RelativeLayout>